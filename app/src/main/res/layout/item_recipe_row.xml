<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_weight="6">

    <TextView
        android:id="@+id/tv_main_recipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Recipe name"
        android:gravity="center_horizontal"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_main_ingredient"
        />

    <TextView
        android:id="@+id/tv_main_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Ingredients #"
        android:gravity="center_horizontal"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toTopOf="@+id/tv_main_recipe"
        app:layout_constraintLeft_toRightOf="@+id/tv_main_recipe"
        app:layout_constraintRight_toLeftOf="@+id/tv_main_step"
        />
    <TextView
        android:id="@+id/tv_main_step"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Steps #"
        android:gravity="center_horizontal"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toTopOf="@+id/tv_main_recipe"
        app:layout_constraintLeft_toRightOf="@id/tv_main_ingredient"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view_main_line"
        android:background="@color/colorLightGreen"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_step"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        />
</android.support.constraint.ConstraintLayout>
